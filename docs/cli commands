# Petri Net Editor CLI Commands (PowerShell Syntax)

# Start the development server
Set-Location -Path .\petri-net-app; npm run dev

# Run unit tests
Set-Location -Path .\petri-net-app; npm test

# Run specific unit tests
Set-Location -Path .\petri-net-app; npm test -- path/to/test/file.test.js

# Run tests with coverage
Set-Location -Path .\petri-net-app; npm test -- --coverage

# Run end-to-end tests
Set-Location -Path .\petri-net-app; npm run test:e2e

Set-Location -Path .\petri-net-app; npm run test:e2e -- tests/simulation.spec.js

# Run tests in watch mode
Set-Location -Path .\petri-net-app; npm run test:watch

# Stop all Node.js processes
taskkill /F /IM node.exe

# Git commands
# Check status
git status

# Add all changes
git add .

# Commit changes
git commit -m "Your commit message here"

# Push changes
git push origin master

# Force push to revert remote HEAD to current state
git push -f origin master

# Run tests for developer
Set-Location -Path .\petri-net-app; npx playwright test --ui

# Reset to last commit
Set-Location -Path .\petri-net-app; git reset --hard HEAD
